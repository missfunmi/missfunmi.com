{%- for post in postslist | reverse %}
<div class="post-clip">
  <div class="post-metadata">
    <time datetime="{{ post.date | isoDate }}">{{ post.date | readableDate }}</time>
    <span> • {{ post | readingTime({raw:true}) }} minute read</span>
    <span class="tags-container"> •
      {%- for tag in post.data.tags | filterTagList %}
        {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
        <a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
        {%- if not loop.last %}, {% endif %}
      {%- endfor %}
    </span>
  </div>
  <a href="{{ post.url }}">
    <div class="post-title">{{ post.data.title }}</div>
    <div class="post-description"><span>{{ post.data.description }}</span></div>
  </a>
</div>
{%- else %}
  {{ metadata.placeholderText }}
{%- endfor %}
