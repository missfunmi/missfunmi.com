<!doctype html>
<html lang="{{ metadata.language }}">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="color-scheme" content="light dark">

  <title>{{ title or metadata.title }} | {{ metadata.author.name }}</title>
  <meta name="description" content="{{ description or metadata.description }}">
  <meta name="generator" content="{{ eleventy.generator }}">
  <link rel="alternate" href="/feed.xml" type="application/atom+xml" title="{{ metadata.title }}'s blog">

  <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">

  <link rel="preload" href="/assets/fonts/InterVariable.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/assets/fonts/InterVariable-Italic.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/assets/images/logo.svg" as="image">

  <link rel="stylesheet" href="/css/main.css">

  {% set js %}
    {% include "js/main.js" %}
  {% endset %}
  <script>{{ js | jsmin | safe }}</script>
</head>

<body>
  <a href="#skip" class="visually-hidden">Skip to main content</a>
  {% include "layouts/header.njk" %}
  <main id="skip">
    {{ content | safe }}
  </main>
  {% include "layouts/footer.njk" %}

  {% set js %}
    {% include "js/toggle-theme.js" %}
  {% endset %}
  <script>{{ js | jsmin | safe }}</script>
</body>

</html>
